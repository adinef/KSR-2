<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="705.0" prefWidth="1200.0" spacing="10" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.script.view.MainController">
    <HBox onMouseClicked="#barClicked">
        <MenuBar style="-fx-background-color: transparent;">
            <Menu mnemonicParsing="false" text="Plik">
                <MenuItem mnemonicParsing="false" text="Ustawienia" onAction="#settings"/>
                <SeparatorMenuItem/>
                <MenuItem mnemonicParsing="false" text="Zamknij" onAction="#closeWindow"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Dane">
                <MenuItem mnemonicParsing="false" text="Wczytaj dane" onAction="#loadData"/>
                <Menu mnemonicParsing="false" text="Kwantyfikatory">
                    <MenuItem mnemonicParsing="false" text="Wczytaj i pokaż" onAction="#showQuantifiers"/>
                    <MenuItem mnemonicParsing="false" text="Nowy" onAction="#newQuantifier"/>
                    <MenuItem mnemonicParsing="false" text="Zapisz zmiany" onAction="#saveQuantifiers" fx:id="saveQuantifiersOption" disable="true"/>
                </Menu>
                <Menu mnemonicParsing="false" text="Kwalifikatory">
                    <MenuItem mnemonicParsing="false" text="Wczytaj i pokaż" onAction="#showQualifiers"/>
                    <MenuItem mnemonicParsing="false" text="Nowy" onAction="#newQualifier"/>
                    <MenuItem mnemonicParsing="false" text="Zapisz zmiany" onAction="#saveQualifiers" fx:id="saveQualifiersOption" disable="true"/>
                </Menu>
                <Menu mnemonicParsing="false" text="Sumaryzatory">
                    <MenuItem mnemonicParsing="false" text="Wczytaj i pokaż" onAction="#showSummarizers"/>
                    <MenuItem mnemonicParsing="false" text="Nowy" onAction="#newSummarizer"/>
                    <MenuItem mnemonicParsing="false" text="Zapisz zmiany" onAction="#saveSummarizers" fx:id="saveSummarizersOption" disable="true"/>
                </Menu>
            </Menu>
            <Menu mnemonicParsing="false" text="Pomoc">
                <MenuItem mnemonicParsing="false" text="O nas" onAction="#about"/>
            </Menu>
        </MenuBar>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#restoreWindow"
                prefWidth="20" style="-fx-background-color: transparent;">
            <graphic>
                <FontIcon iconLiteral="fa-window-restore" iconSize="15"/>
            </graphic>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Button alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#minimizeWindow"
                prefWidth="20" style="-fx-background-color: transparent;">
            <graphic>
                <FontIcon iconLiteral="fa-window-minimize" iconSize="15"/>
            </graphic>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Button alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#closeWindow"
                prefWidth="20" style="-fx-background-color: transparent;">
            <graphic>
                <FontIcon iconLiteral="fa-window-close" iconSize="15"/>
            </graphic>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </HBox>
    <TabPane tabMinWidth="75">
        <Tab fx:id="tab1" text="Panel ustawień" closable="false">
            <HBox spacing="15" minHeight="700">
                <VBox prefWidth="200" spacing="20" styleClass="vbox_bordered">
                    <Label styleClass="header">Podsumowania</Label>
                    <Button fx:id="selectAcceptableFieldsButton" onAction="#selectAcceptableFields" prefHeight="28"
                            prefWidth="250.0"
                            text="Wybierz pola">
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>
                    <Button fx:id="selectQuantifiersButton" onAction="#selectQuantifiers" prefHeight="28"
                            prefWidth="250.0"
                            text="Wybierz kwantyfikatory">
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>
                    <Button fx:id="selectQualifiersButton" onAction="#selectQualifiers" prefHeight="28"
                            prefWidth="250.0"
                            text="Wybierz kwalifikatory">
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>
                    <Button fx:id="selectSummarizersButton" onAction="#selectSummarizers" prefHeight="28"
                            prefWidth="250.0"
                            text="Wybierz summaryzatory">
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>
                    <Button fx:id="calculateButton" onAction="#proceedWithSummarization" prefHeight="28"
                            prefWidth="250.0"
                            text="Start">
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>
                </VBox>
                <HBox fx:id="summaryDataChosenBox" spacing="15" maxWidth="Infinity">

                </HBox>
            </HBox>
        </Tab>
    </TabPane>
</VBox>
